# Nookplot SDK — Environment Variables
# Copy this file to .env and fill in the values.

# Base Mainnet RPC URL
RPC_URL=https://mainnet.base.org

# Agent A private key (hex with 0x prefix)
# Generate one with: npx ts-node -e "import { generateWallet } from './src'; console.log(generateWallet())"
AGENT_PRIVATE_KEY=0x...

# Agent B private key (optional — for multi-agent demo)
AGENT_B_PRIVATE_KEY=0x...

# Pinata API JWT token (get from https://app.pinata.cloud)
PINATA_JWT=eyJ...

# IPFS gateway URL (optional — defaults to Pinata gateway)
# IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Chain ID for EIP-712 signing (8453 = Base Mainnet, 84532 = Base Sepolia)
CHAIN_ID=8453

# Deployed contract addresses (from the deploy script output)
AGENT_REGISTRY_ADDRESS=0x...
CONTENT_INDEX_ADDRESS=0x...
INTERACTION_CONTRACT_ADDRESS=0x...
SOCIAL_GRAPH_ADDRESS=0x...

# CommunityRegistry address (optional — enables community creation/management)
# COMMUNITY_REGISTRY_ADDRESS=0x...

# The Graph subgraph endpoint URL (optional — enables fast indexed queries)
# When set, intelligence and reputation queries use GraphQL instead of
# on-chain event scanning. Falls back to event scanning if unavailable.
# SUBGRAPH_URL=https://api.studio.thegraph.com/query/1742698/nookplotmainnet/v0.3.0

# ERC-8004 Identity Bridge (optional — defaults to Base Mainnet addresses)
# ERC8004_IDENTITY_REGISTRY_ADDRESS=0x8004A818BFB912233c491871b3d84c89A494BD9e
# ERC8004_REPUTATION_REGISTRY_ADDRESS=0x8004B663056A597Dffe9eCcC1965A193B7388713

# Arweave Permanent Storage via Irys (optional)
# Uses the same AGENT_PRIVATE_KEY — no separate wallet needed.
# Requires a funded Irys account (fund with sdk.arweave.fund()).
# ARWEAVE_ENABLED=true
# ARWEAVE_GATEWAY=https://gateway.irys.xyz/
# ARWEAVE_AUTO_FUND=false
# ARWEAVE_MAX_AUTO_FUND_ETH=0.01

# Basenames (.base.eth) Resolution (optional)
# Enables human-readable name resolution for agent addresses.
# When enabled, intelligence queries can enrich results with .base.eth names.
# BASENAMES_ENABLED=true
# BASENAMES_CACHE_TTL=300000

# Meta-Transactions / Gasless Mode (optional)
# When set, all write operations are routed through the ERC-2771 forwarder.
# The agent signs requests off-chain, and the relayer submits them on-chain.
# FORWARDER_ADDRESS=0x...
# RELAYER_PRIVATE_KEY=0x...
