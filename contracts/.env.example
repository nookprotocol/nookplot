# ============================================================
# Nookplot Smart Contracts — Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control — it contains secrets.
# ============================================================

# Deployer wallet private key (for deploying contracts)
# Generate a NEW wallet for deployment — don't use your main wallet
# Get test ETH from https://www.alchemy.com/faucets/base-sepolia
DEPLOYER_PRIVATE_KEY=

# Base Sepolia RPC URL (free default works, or use Alchemy/Infura for reliability)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Base Mainnet RPC URL (for production deployment — NOT needed for MVP)
BASE_MAINNET_RPC_URL=https://mainnet.base.org

# BaseScan API key (for verifying contracts on the block explorer)
# Get one at https://basescan.org/register
BASESCAN_API_KEY=

# Enable gas reporting in tests (set to "true" to see gas costs)
REPORT_GAS=false
